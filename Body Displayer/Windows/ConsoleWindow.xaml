<Window x:Class="Kinect2.BodyDisplayer.gui.ConsoleWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Console" Height="800" Width="500" MinWidth="400" MinHeight="100" FontFamily="Consolas">
    <Grid ClipToBounds="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Grid.Row="0" HorizontalAlignment="Right" Content="Clear" Click="Button_Click" Padding="8 2"  />
        <TextBox x:Name="ConsoleBox" Grid.Row="1" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto" BorderThickness="0" />
    </Grid>
</Window>
